#!/usr/bin/env bash
# This script installs and configures Nginx on an Ubuntu server.

# Update package lists
sudo apt update

# Install Nginx
sudo apt install -y nginx

# Create a custom index.html page with the required content
echo "Hello World!" | sudo tee /var/www/html/index.html > /dev/null

# Configure Nginx to listen on port 80
sudo sed -i 's/listen 80 default_server;/listen 80;/g' /etc/nginx/sites-available/default

# Make sure the Nginx configuration is valid
sudo nginx -t

# Restart Nginx without using systemctl
sudo /etc/init.d/nginx restart

# Confirm that Nginx is running and listening on port 80
sudo netstat -tuln | grep ':80'
